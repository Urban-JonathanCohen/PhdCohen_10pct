file = {:C$\backslash$:/Users/edgardo/Documents/Mendeley Desktop/Vergara, Damgaard, Horvath/Resources, Conservation and Recycling/Vergara, Damgaard, Horvath - 2011 - Boundaries matter Greenhouse gas emission reductions from alternative waste treatment strategies for.pdf:pdf},
issn = {09213449},
journal = {Resources, Conservation and Recycling},
keywords = {Anaerobic digestion,California,Climate change,Landfill,Life-cycle assessment,Solid waste management,Source reduction},
pages = {87--97},
publisher = {Elsevier B.V.},
title = {{Boundaries matter: Greenhouse gas emission reductions from alternative waste treatment strategies for California's municipal solid waste}},
url = {http://dx.doi.org/10.1016/j.resconrec.2011.09.011},
volume = {57},
year = {2011}
}
@article{Rouw2011,
abstract = {Packaging materials are one of the largest contributors to municipal solid waste production. This paper evaluates the material impacts packaging policy in The Netherlands in the period 1986-2007. Five different voluntary agreements were implemented over this period to reduce the environmental impact of packaging. The analysis shows that among the investigated indicators, population statistically is the most robust indicator to estimate the packaging demand. A baseline is developed on the basis of population growth in The Netherlands, and is used as reference to evaluate policy impacts. The policy periods are evaluated on the basis of overall effectiveness compared to the baseline and target achievement. Dutch packaging policies have been effective to reduce the total packaging volume until 1999. After 2000, packaging consumption increased more rapidly than the baseline, suggesting that policy measures have not been effective. The largest increase in packaging recycling rates was achieved during the first policy period. More clear and consistent packaging policy measures and targets could improve the effectiveness of policies. {\textcopyright} 2011 Elsevier B.V.},
