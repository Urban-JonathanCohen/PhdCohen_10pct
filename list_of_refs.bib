keywords = {Conceptual framework,Food,Household consumption,Material flow analysis,Metabolism,Social practices},
pages = {44--55},
publisher = {Elsevier Ltd},
title = {{Understanding household food metabolism: Relating micro-level material flow analysis to consumption practices}},
