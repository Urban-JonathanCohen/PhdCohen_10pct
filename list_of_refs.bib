publisher = {Universidade de Lisboa, IST},
title = {{The {\{}{\{}Emergence{\}}{\}} of {\{}{\{}Spatial Scales{\}}{\}} in {\{}{\{}Urban Regions{\}}{\}}}},
year = {2017}
}
