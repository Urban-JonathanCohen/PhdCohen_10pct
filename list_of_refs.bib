isbn = {9780993342905},
journal = {SSS 2015 - 10th International Space Syntax Symposium},
keywords = {Affordance,Cognition,Ecological space,Geometry,Space syntax theory},
pages = {1--9},
title = {{Ecological space and cognitive geometry: Linking humans and environment in space syntax theory}},
year = {2015}
