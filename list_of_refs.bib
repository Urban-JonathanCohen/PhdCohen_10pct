file = {:C$\backslash$:/Users/edgardo/Documents/Mendeley Desktop/de Falco, Angelidou, Addie/European Urban and Regional Studies/de Falco, Angelidou, Addie - 2019 - From the “smart city” to the “smart metropolis” Building resilience in the urban periphery.pdf:pdf;:C$\backslash$:/Users/edgardo/Documents/Mendeley Desktop/de Falco, Angelidou, Addie/European Urban and Regional Studies/de Falco, Angelidou, Addie - 2019 - From the “smart city” to the “smart metropolis” Building resilience in the urban periphery(2).pdf:pdf},
issn = {14617145},
journal = {European Urban and Regional Studies},
keywords = {Comparative urbanism,peripheral urbanization,smart urbanism,urban and spatial planning,urban infrastructure},
number = {2},
pages = {205--223},
title = {{From the “smart city” to the “smart metropolis”? Building resilience in the urban periphery}},
