issn = {14320592},
journal = {Annals of Regional Science},
keywords = {J32,R11,R41},
number = {2},
pages = {375--398},
publisher = {Springer Berlin Heidelberg},
title = {{Working from home and the willingness to accept a longer commute}},
url = {https://doi.org/10.1007/s00168-018-0873-6},
