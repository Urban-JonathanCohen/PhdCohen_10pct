title = {{Acting {\{}{\{}Across Scales{\}}{\}} - {\{}{\{}Describing Urban Surfaces{\}}{\}} as {\{}{\{}Technical{\}}{\}} '{\{}{\{}Fields{\}}{\}} of {\{}{\{}Action{\}}{\}}'}},
year = {2009}
}
