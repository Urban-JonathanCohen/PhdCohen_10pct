issn = {20711050},
journal = {Sustainability (Switzerland)},
keywords = {Circular economy,Eco-innovation,Sustainability,Urban metabolism,Wastescapes},
number = {12},
title = {{Beyond wastescapes: Towards circular landscapes. addressing the spatial dimension of circularity through the regeneration of wastescapes}},
volume = {10},
year = {2018}
}
