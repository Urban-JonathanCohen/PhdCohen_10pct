school = {UCL (University College London)},
shorttitle = {Building the Extensive City},
title = {{Building the Extensive City: Processes of Metropolisation in {\{}{\{}European{\}}{\}} Second-Tier Urban Regions}},
type = {Doctoral},
year = {2016}
}
