issn = {09596526},
journal = {Journal of Cleaner Production},
keywords = {Circular economy,Food waste,PLS-SEM,Theory of planned behaviour,Youths},
pages = {8--18},
title = {{From the table to waste: An exploratory study on behaviour towards food waste of Spanish and Italian youths}},
