journal = {Journal of Environmental Management},
keywords = {Bring-bank,Household waste,Modelling,Packaging waste,Separate collection,Waste management},
pages = {13--24},
publisher = {Elsevier Ltd},
title = {{Model for the separate collection of packaging waste in Portuguese low-performing recycling regions}},
url = {https://doi.org/10.1016/j.jenvman.2017.04.065},
